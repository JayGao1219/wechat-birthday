/* pages/muyu/index.wxss */
page{
  background: rgb(255, 255, 255);
}
.animal{
  transform:scale(1.05);
}
.image{
  width:304rpx;
  height:221rpx ;
  margin-left: 223rpx;
  margin-top: 20rpx;
}

#font{
  color:rgb(170, 64, 64);
  height: 200px;
  animation: mymove 1s;
  position:absolute;
  opacity:0;
  margin-left: 250rpx;
}

#default{
  color:rgb(12, 12, 12);
  height: 200px;
  position:absolute;
  opacity:0;
  margin-left: 250rpx;
}
@keyframes mymove {
  from {top:100px;opacity:100;}
  to {top:50px;opacity:0;}
}

.title{
  margin-left: 250rpx;color:black; margin-top: 250rpx;
}

.timer{
  color:rgb(170, 64, 64); 
  text-align:center;
  font-size: small;
}

.paragraph{
  text-indent: 10px;
  color:rgb(34, 36, 55);
  font-size: small;
  font-family: "STKaiti";
}

.sign{
  text-align: right;
}
